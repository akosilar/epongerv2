<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>eponger v2</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <!-- navbar -->
    <%- include('partials/sidebar') %>

    <!-- Player list -->

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="container">
        <div class="text-center">
          <h1>Checked In</h1>
        </div>

        <!-- group prompt -->
        <div class="">
          Checked in: <%= playersCheckedIn.length %>
          <form action="/makeGroups" method="post">
            <div>
              <label for="numberGroups">Number of Groups?</label>
              <input
                type="number"
                name="numberGroups"
                id="numberGroups"
                placeholder="3"
                required
              />
            </div>
            <div>
              <label for="numberGroups">Number of Players per Group?</label>
              <input
                type="number"
                name="numberPlayers"
                id="numberPlayers"
                placeholder="4"
                required
              />
            </div>
            <div>
              <button>Generate Groups</button>
            </div>
          </form>
        </div>
        <!-- checked in players -->
        <div class="">
          <table class="table">
            <thead>
              <tr>
                <!-- <th scope="col">ID</th> -->
                <th scope="col">Rating</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
              </tr>
            </thead>
            <tbody>
              <% search.forEach(player => { %>

              <tr>
                <!-- <th scope=""><%= player._id %></th> -->
                <td><%= player.rating %></td>
                <td><%= player.firstName %></td>
                <td><%= player.lastName %></td>
                <td>
                  <a
                    href="/<%= player._id %>/remove "
                    id="remove"
                    class="btn btn-danger"
                    >Remove</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <!-- groups -->
      </div>
    </main>
     


    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
      integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
