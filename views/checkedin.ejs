<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checked In</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <!-- navbar -->
    <%- include('partials/navbar') %>
    <%- include('partials/sidebar') %>

    <!-- Player list -->

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="container">
        <div class="text-center">
          <h1>Checked In</h1>
        </div>

        <!-- group prompt -->
        <div class="container mt-5">
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  Checked in: <%= playersCheckedIn.length %>
                </div>
                <div class="card-body">
                  <form action="/makeGroups" method="post">
                    <div class="mb-3">
                      <label for="numberGroups" class="form-label">Number of Groups?</label>
                      <input
                        type="number"
                        class="form-control"
                        name="numberGroups"
                        id="numberGroups"
                        placeholder="3"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="numberPlayers" class="form-label">Number of Players per Group?</label>
                      <input
                        type="number"
                        class="form-control"
                        name="numberPlayers"
                        id="numberPlayers"
                        placeholder="4"
                        required
                      />
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Generate Groups</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        
        <!-- checked in players -->
        <div class="table-responsive" style="max-height: 500px;" >
          <table class="table table-hover table-sm table-striped">
            <thead class="sticky-top bg-white" >
              <tr>
                <!-- <th scope="col">ID</th> -->
                <th scope="col">Rating</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
              </tr>
            </thead>
            <tbody>
              <% search.forEach(player => { %>

              <tr>
                <!-- <th scope=""><%= player._id %></th> -->
                <td><%= player.rating %></td>
                <td><%= player.firstName %></td>
                <td><%= player.lastName %></td>
                <td>
                  <a
                    href="/<%= player._id %>/remove "
                    id="remove"
                    class="btn btn-danger"
                    >Remove</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <!-- groups -->
      </div>
    </main>
     


    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
      integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>

    <script>
      feather.replace()
    </script>
  </body>
</html>
