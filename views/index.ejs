<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Players</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    
    
<!-- navbar --> 
  <%- include('partials/navbar') %>
  <%- include('partials/sidebar') %>
    <div class="container-fluid">
      <div class="row">
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          
    <!-- Player list -->
      <div class="container">
        <div class="text-center">
          <h2>Players</h2>

          <button
            class="btn btn-primary btn-lg"
            data-bs-toggle="modal"
            data-bs-target="#register"
          >
            Register New Player
          </button>
          <a href="/checkedin" id="checkedin" class="btn btn-secondary btn-lg"
            >View Checked In <span class="badge bg-primary rounded-pill"><%= playersCheckedIn.length %></span></a
          >
        </div>
      </div>
      <div>
        <div class="row">
          <div class="col">
            <div class="table-responsive players" >
              <table class="table table-striped table-sm table-hover">
                <thead class="sticky-top bg-white">
                  <tr>
                    <!-- <th scope="col">ID</th> -->
                    <th scope="col">Rating</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Email</th>
                    <!-- <th scope="col">Checked In?</th> -->
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% players.forEach(player => { %>
                  <% if (playersCheckedIn.includes(player._id.toString()) === false)  { %>

                  <tr 
                  
                  data-bs-toggle="modal" data-bs-target="#w<%=player._id%>">
                    <%-include('partials/profile',{player}) %>
                    <td><%= player.rating %></td>
                    <td><%= player.firstName %></td>
                    <td><%= player.lastName %></td>
                    <td><%= player.email %></td>
                    <!-- <td><%= playersCheckedIn.includes(player._id.toString()) %></td> -->
                    <td>
                      <a
                        href="/<%= player._id %>/checkin "
                        id="checkin"
                        class="btn btn-primary"
                        >Check in</a
                      >
                    </td>
                  </tr>
                  <% } %>

                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col">
            <div class="table-responsive playersCheckedIn">
              <table class="table table-striped table-sm">
                <thead class="sticky-top bg-white">
                  <tr>
                    <th scope="col">Rating</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col"></th>

                  </tr>
                </thead>
                <tbody>
                  <% search.forEach(player => { %>
    
                  <tr>
                    <td><%= player.rating %></td>
                    <td><%= player.firstName %></td>
                    <td><%= player.lastName %></td>
                    <td>
                      <a
                        href="/<%= player._id %>/remove "
                        id="remove"
                        class="btn btn-danger"
                        >Remove</a
                      >
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      
    <!-- Player detail -->

    <!-- Register new player -->
    <%- include('partials/new') %>
        </main>
      </div>
    </div>
    


    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
      integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>
      feather.replace()
    </script>
  </body>
</html>
